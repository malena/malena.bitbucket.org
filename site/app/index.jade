						img(class="img-pulse" src="public/dist/images/pulse-1.png")
					a.pulse.pulse-2(data-toggle="modal", data-target="#experiments", href="http://www.google.com") 
						span Experiments 
						img(class="img-pulse" src="public/dist/images/pulse-1.png")
					a.pulse.pulse-3(data-toggle="modal", data-target="#websites", href="http://www.google.com") 
