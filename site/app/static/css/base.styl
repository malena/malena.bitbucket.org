
a 
	color: #ACA8A8
	text-decoration: none

h2 
	margin-left: 23em
	padding-top: 2em
	text-transform: uppercase
	font-size: 1.9em

a:hover
	color: #5A5A5A

.social-icons
	margin: 1em auto
	a 
		background-repeat: no-repeat;
		text-indent: -3000px
		display: block
		float: left
		width: 28px
		height: 28px
		margin-right: 0.5em

.flickr
	background-image: url('images/flickr.png')

.twitter
	background-image: url('images/twitter.png')

.facebook
	background-image: url('images/facebook.png')

.linkedin
	background-image: url('images/linkedin.png')

.github
	background-image: url('images/github.png')


.span-pulse
	opacity: 0 

.modal-dialog
	width: 250px	
	height: 250px

.modal-content
	border-radius: 140px 
	width: 100%
	height: 100%

.modal-body
	height: 100%
	text-align: center

	a
		text-align: center
		display: block

.modal-backdrop
	z-index: 2